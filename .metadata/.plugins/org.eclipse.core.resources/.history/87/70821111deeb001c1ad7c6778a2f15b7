package exam02;

public class ex03_systemInCode {
	// system.in.read()를 위해 예외 처리를 throw Exception 해주어야 함
	public static void main(String[] args) throws Exception {
		
		/////////////입력값에 대한 것 1번, Enter 값 2번
		int keyCode;
		
		keyCode = System.in.read();
		System.out.println("insertCode: " + keyCode);
		
		keyCode = System.in.read();
		System.out.println("insertCode: " + keyCode);
		
		keyCode = System.in.read();
		System.out.println("insertCode: " + keyCode);
		
		/////////////////
		while(true) {
			keyCode = System.in.read();
			System.out.println("keyCode : " + keyCode);
		}
		
	}
}
