package exam02;

import java.util.Scanner;

public class ex041_scannersolution {
	public static void main(String[] args) throws Exception {
//		이름 : 감자바
//		나이 : 25
//		전화 : 010-123-4567 출력
		String name = "감자바";
		int age = 25;
		String tel1="010", tel2="123", tel3="4567";
		
		System.out.println("이름 : " + name);
		System.out.println("나이 : " + age);
		System.out.printf("전화 : %s-%s-%s", tel1, tel2, tel3);
		
		///// 사용자가 입력한 두 수를 덧셈하여 결과 출력
		Scanner scanner = new Scanner(System.in);
		System.out.println("첫번째 숫자 입력 :");
		String no1 = scanner.nextLine();
		
		System.out.println("두번째 숫자 입력 :");
		String no2 = scanner.nextLine();
		
		int num1 = Integer.parseInt(no1);
		int num2 = Integer.parseInt(no2);
		int result = num1 + num2;
		System.out.printf("%n + %n = %n", num1, num2, result);
		
		
		
	}
	
}
