package exam02;

public class ex01_RunStatementExample {

	public static void main(String[] args) {
		
		//////////////변수 지정 및 초기화//////////////
		int x,y,z; // == int x; int y; int z;
		x = 90; // x값에 90을 처음으로 저장하는 것이 "초기화", 90은 "초기값"
		
		int value = x + 10;
		int result = value + 10;
		System.out.println(result);
		
		int hour = 3;
		int minute = 15;
		System.out.println("현재시각 " + hour + "시 " + minute +"분");
		
		int totalMinute = (hour * 60) + minute;
		System.out.println("시간 " + hour + minute + "분");
		System.out.println("총" + totalMinute + "분");
		
		////////////정수 리터럴/////////////////////
		int var1 = 0b1011; // 2진수
		int var2 = 0206; // 4진수
		int var3 = 365; // 10진수
		int var4 = 0xB3; //16진수
		
		System.out.println(var1);
		System.out.println(var2);
		System.out.println(var3);
		System.out.println(var4);
		
		//////////////// byte 타입 변수 //////////////////////
		byte var_1 = -128;
		byte var_2 = -30;
		byte var_3 = 0;
		byte var_4 = 30;
		byte var_5 = 127;
		//byte vat_6 = 128; --> 128이 byte의 허용 범위를 초과하기 때문에 컴파일 오류
		
		System.out.println(var_1);
		System.out.println(var_2);
		System.out.println(var_3);
		System.out.println(var_4);
		System.out.println(var_5);
		
		//////////////////long 타입 변수//////////////////////////
		//long balance = 100000000000; <-- int 타입 허용 범위를 넘어서기 때문에 컴파일 오류
		long balance = 100000000000L;
		
		System.out.println(balance);
		
		////////////////이스케이프 문자 사용 ///////////////////////////////
		System.out.println("번호 \t 이름 \t 직업");
		System.out.print("행 단위 출력\n");
		System.out.println("우리는 \"개발자\" 입니다.");
		System.out.println("봄\\여름\\가을\\겨울");
	}

}
